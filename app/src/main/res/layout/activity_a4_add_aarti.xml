<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".A4_AddAarti">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_weight="1"
                android:id="@+id/A4_txt_TitleHindi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#E7EF9C"
                android:padding="20dp"
                android:hint="Hindi Title Here"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/A4_txt_aartiHindi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E7EF9C"
                    android:padding="20dp"
                    android:hint="Hindi Aarti"
                    />
            </ScrollView>
            <EditText
                android:id="@+id/A4_txt_TitleEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#E7EF9C"
                android:padding="20dp"
                android:hint="English Title Here"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/A4_txt_aartiEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E7EF9C"
                    android:padding="20dp"
                    android:hint="English Aarti"
                    />
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/A4_btnPhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   android:text="Select Photo"
                    android:padding="10dp"
                     />
                <TextView
                    android:id="@+id/A4_lbl_AartiName"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:id="@+id/A4_Image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:layout_margin="20dp"
                android:id="@+id/A4_Arti_Upload"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>